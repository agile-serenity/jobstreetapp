{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["models/**", ".env"] 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}